@model IEnumerable<ToDoLife_App.Models.ToDo>

@{
    ViewData["Title"] = "ToDo-List";
}

<h1>ToDo-List</h1>

<button>
    <a asp-action="Create" class ="btn btn-primary">Create New</a>
</button>
<div id="filterTodoContainer" >
<li>
    <ul>

<form asp-action="FilterByIsNotCompleted">
    <input type="submit" value="Filter ByIsNotCompleted" class="btn btn-secondary" /> 
</form> 
    </ul>
    <ul>


<button>
    <a asp-action="index" asp-route-today="true" class="btn btn-secondary">ToDosOfToday</a>
</button>
    </ul>
</li>
</div>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Title)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DueDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Points)
            </th>
            <th></th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Title)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DueDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Points)
            </td>
            <td>
                        <form method="post" asp-action="setTaskCompleted" style="display: inline">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" value=@item.Id name='Id' />
            <button  type="submit" class="btn btn-link"  class="btn btn-primary" >@item.IsCompleted</button>
        </form>  
            </td>
            <td>
               <button><a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-dark">Edit</a> </button>
                    <button><a asp-action="Details" asp-route-id="@item.Id" class="btn btn-dark">Details</a></button>
                    <button><a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-dark">Delete</a></button>
            </td>
        </tr>
}
    </tbody>
</table>
